{
	"name": "mireks",
	"version": "1.0.0",
	"description": "Nuxt Vue website - universal but still SPA.",
	"author": "Jakub Koralewski",
	"private": true,
	"scripts": {
		"dev": "nuxt-ts",
		"build": "nuxt-ts build",
		"start": "nuxt-ts start",
		"generate": "nuxt-ts generate && rimraf dist/**/*.js.map",
		"test": "ava --timeout=2m"
	},
	"ava": {
		"extensions": [
			"ts"
		],
		"files": [
			"**/*.test.ts"
		],
		"require": [
			"esm",
			"ts-node/register/transpile-only",
			"tsconfig-paths/register"
		],
		"verbose": true
	},
	"babel": {
		"presets": [
			"es2015"
		]
	},
	"dependencies": {
		"@fortawesome/fontawesome-svg-core": "^1.2.27",
		"@fortawesome/free-brands-svg-icons": "^5.12.1",
		"@fortawesome/free-regular-svg-icons": "^5.12.1",
		"@fortawesome/free-solid-svg-icons": "^5.12.1",
		"@fortawesome/vue-fontawesome": "^0.1.9",
		"@nuxt/typescript-build": "^0.5.6",
		"@nuxt/typescript-runtime": "^0.3.8",
		"@nuxtjs/pwa": "^3.0.0-beta.20",
		"@nuxtjs/sitemap": "^1.3.1",
		"@nuxtjs/style-resources": "^0.1.2",
		"d3plus-text": "^0.9.50",
		"gsap": "^2.1.3",
		"node-sass": "^4.13.1",
		"nuxt": "^2.15.8",
		"nuxt-property-decorator": "^2.5.0",
		"postcss-loader": "^3.0.0",
		"rimraf": "^2.7.1",
		"sass-loader": "^7.3.1",
		"scrollmagic": "^2.0.7",
		"ts-node": "^8.6.2",
		"vue": "^2.6.11",
		"vue-class-component": "^7.2.3",
		"vue-svg-inline-loader": "^1.4.5"
	},
	"devDependencies": {
		"@nuxtjs/google-analytics": "^2.2.3",
		"@nuxtjs/sentry": "^3.2.4",
		"@types/dom-inputevent": "^1.0.5",
		"@types/gsap": "^1.20.2",
		"ava": "^3.3.0",
		"babel-preset-env": "^1.7.0",
		"babel-register": "^6.26.0",
		"cross-env": "^5.2.1",
		"esm": "^3.2.25",
		"imports-loader": "^0.8.0",
		"jsdom": "^15.2.1",
		"nodemon": "^1.19.4",
		"prettier": "1.14.3",
		"prettier-tslint": "^0.4.2",
		"tsconfig-paths": "^3.9.0",
		"tslint": "^5.20.1",
		"tslint-config-prettier": "^1.18.0",
		"tslint-plugin-prettier": "^2.1.0"
	}
}
